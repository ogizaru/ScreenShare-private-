<body>

    <div id="setup-panel">
        <div class="container">
            <h1>WebRTC Screen Share (P2P)</h1>

            <p style="color: #94a3b8; margin-bottom: 5px;">Your Device ID (Host)</p>
            <div class="id-display">
                <input type="text" id="my-peer-id" readonly value="Generating...">
                <button class="btn btn-secondary" style="width: auto; padding: 8px 15px;"
                    onclick="copyId()">Copy</button>
            </div>

            <div class="section-grid">
                <!-- HOST Column -->
                <div class="section-col">
                    <h3 style="color: #60a5fa;">Host (Share)</h3>

                    <label>Preferred Codec</label>
                    <select id="codec-select">
                        <option value="AV1">AV1 (High Quality/GPU)</option>
                        <option value="VP9">VP9 (Balanced)</option>
                        <option value="H264">H264 (Low Latency)</option>
                        <option value="VP8">VP8 (Compatibility)</option>
                    </select>

                    <label>Max Bitrate (Mbps)</label>
                    <input type="number" id="bitrate-input" value="10" min="1" max="50">

                    <button class="btn btn-primary" onclick="startHostPeer()">Start Sharing</button>
                    <div id="host-status" class="status-msg">Standby...</div>
                </div>

                <!-- CLIENT Column -->
                <div class="section-col">
                    <h3 style="color: #a78bfa;">Client (Receive)</h3>

                    <label>Target Host ID</label>
                    <input type="text" id="target-peer-id" placeholder="Paste Host ID here">

                    <button class="btn btn-connect" onclick="connectToHost()">Connect</button>
                    <div id="client-status" class="status-msg">Standby...</div>
                </div>
            </div>

            <p style="margin-top: 20px; font-size: 0.8rem; color: #64748b;">
                * Internet Connection Supported (OpenRelay STUN/TURN)<br>
                * To use AV1, both browsers (Host/Client) must support it.<br>
                * If connection fails, please check firewall/port settings.
            </p>
        </div>
    </div>

    <div id="video-container">
        <video id="remote-video" autoplay playsinline></video>
        <div id="stats-display" class="stats-overlay">Waiting for connection...</div>

        <div class="control-overlay">
            <button class="overlay-btn" title="Full Screen" onclick="toggleFullscreen()">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path
                        d="M8 3H5a2 2 0 0 0-2 2v3m18 0V5a2 2 0 0 0-2-2h-3m0 18h3a2 2 0 0 0 2-2v-3M3 16v3a2 2 0 0 0 2 2h3" />
                </svg>
            </button>
            <button class="overlay-btn" title="Disconnect" onclick="stopClient()" style="color: #ef4444;">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M18.36 6.64a9 9 0 1 1-12.73 0" />
                    <line x1="12" y1="2" x2="12" y2="12" />
                </svg>
            </button>
        </div>
    </div>

    <script>
        // --- State Variables ---
        let myPeer = null;
        let myId = null;
        let activeCall = null;     // The MediaConnection
        let localStream = null;
        let peerConnection = null; // Underlying RTCPeerConnection for stats/munging
        let statsInterval = null;
        let wakeLock = null;
        let pendingConnections = []; // Store data connections waiting for stream
        let hostConnection = null; // Client: Connection to Host for sending Input
        let touchTimer; // OSD Timer

        // --- UI Elements ---
        const myIdInput = document.getElementById('my-peer-id');
        const hostStatus = document.getElementById('host-status');
        const clientStatus = document.getElementById('client-status');
        const videoContainer = document.getElementById('video-container');
        const remoteVideo = document.getElementById('remote-video');

        // --- Initialize PeerJS ---
        window.addEventListener('load', () => {
            if (typeof Peer === 'undefined') {
                alert("Failed to load PeerJS. Check internet connection.");
                return;
            }
            initPeer();
        });

        function initPeer() {
            // TURN Config (OpenRelay Project - Free Tier)
            const iceServers = [
                { urls: 'stun:stun.l.google.com:19302' },
                { urls: 'stun:stun1.l.google.com:19302' },
                { urls: 'stun:stun2.l.google.com:19302' },
                { urls: 'stun:stun3.l.google.com:19302' },
                { urls: 'stun:stun4.l.google.com:19302' },
            ];

            myPeer = new Peer(null, {
                debug: 1,
                config: {
                    iceServers: iceServers
                }
            });

            myPeer.on('open', (id) => {
                myId = id;
                myIdInput.value = id;
                console.log('My Peer ID:', id);
            });

            myPeer.on('error', (err) => {
                console.error("PeerJS Error:", err);
                if (err.type === 'peer-unavailable') {
                    alert("Host ID not found. Please check ID.");
                    clientStatus.innerText = "Connection Error: Host not found";
                    clientStatus.style.color = "#ef4444";
                } else if (err.type === 'network' || err.type === 'disconnected') {
                    alert("Network error occurred.");
                    clientStatus.innerText = "Communication Error";
                    clientStatus.style.color = "#ef4444";
                } else {
                    alert("Communication Error: " + err.type);
                }
            });

            // Handle Incoming Calls (Media Stream)
            myPeer.on('call', (call) => {
                console.log("Receiving call from:", call.peer);

                if (localStream) {
                    // We are HOST: A client is calling us
                    hostStatus.innerText = "Client Connecting...";
                    hostStatus.style.color = "#fbbf24";

                    // Munge SDP in Answer
                    const targetCodec = document.getElementById('codec-select').value;
                    call.answer(localStream, {
                        sdpTransform: (sdp) => {
                            return forceCodec(sdp, targetCodec);
                        }
                    });
                    setupCallEvents(call, 'host');
                } else {
                    // We are CLIENT receiving stream
                    console.log("Accepting incoming stream as Client");
                    clientStatus.innerText = "Receiving Stream...";
                    call.answer();
                    setupCallEvents(call, 'client');
                }
            });

            // Handle Data Connections (Signaling/Handshake/Input)
            myPeer.on('connection', (conn) => {
                console.log("Data connection received from:", conn.peer);

                conn.on('open', () => {
                    if (!pendingConnections.find(c => c.peer === conn.peer)) {
                        pendingConnections.push(conn);
                    }

                    conn.on('data', (data) => {
                        // Protocol: request-stream, wait, input
                        if (data.type === 'request-stream') {
                            if (localStream) {
                                console.log("Client requested stream. Calling back...");
                                const targetCodec = document.getElementById('codec-select').value;
                                const call = myPeer.call(conn.peer, localStream, {
                                    sdpTransform: (sdp) => {
                                        return forceCodec(sdp, targetCodec);
                                    }
                                });
                                setupCallEvents(call, 'host');
                            } else {
                                console.log("Client requested stream but not ready. Sending wait...");
                                conn.send({ type: 'wait' });
                            }
                        } else if (data.type === 'input') {
                            // Remote Control Input Log
                            // Browser security prevents actual execution, but we log coordinates.
                            // A companion script could read these logs or listen to a websocket.
                            console.log(`[Remote Input] ${data.event} button:${data.button} x:${data.x} y:${data.y}`);
                        }
                    });

                    conn.on('close', () => {
                        pendingConnections = pendingConnections.filter(c => c.peer !== conn.peer);
                    });
                });
            });
        }

        // --- HOST Logic ---
        async function startHostPeer() {
            try {
                // Get Screen Stream
                localStream = await navigator.mediaDevices.getDisplayMedia({
                    video: {
                        frameRate: { ideal: 60, max: 120 },
                        cursor: "always",
                        width: { ideal: 3840 },
                        height: { ideal: 2160 }
                    },
                    audio: {
                        autoGainControl: false,
                        echoCancellation: false,
                        noiseSuppression: false,
                        channelCount: 2
                    }
                });

                hostStatus.innerText = "Capturing Screen. Waiting for Client...";
                hostStatus.style.color = "#4ade80"; // Green

                if (pendingConnections.length > 0) {
                    console.log(`Calling back ${pendingConnections.length} pending clients...`);
                    const targetCodec = document.getElementById('codec-select').value;
                    pendingConnections.forEach(conn => {
                        if (conn.open) {
                            const call = myPeer.call(conn.peer, localStream, {
                                sdpTransform: (sdp) => {
                                    return forceCodec(sdp, targetCodec);
                                }
                            });
                            setupCallEvents(call, 'host');
                        }
                    });
                    hostStatus.innerText = "Connecting to pending clients...";
                }

                localStream.getVideoTracks()[0].onended = () => {
                    hostStatus.innerText = "Sharing Stopped";
                    hostStatus.style.color = "";
                    if (activeCall) activeCall.close();
                    localStream = null;
                };

            } catch (err) {
                console.error("Screen capture failed:", err);
                alert("Failed to start sharing: " + err.message);
            }
        }

        // --- CLIENT Logic ---
        function connectToHost() {
            const targetId = document.getElementById('target-peer-id').value.trim();
            if (!targetId) return alert("Please enter Host ID");

            clientStatus.innerText = "Connecting to Host...";
            clientStatus.style.color = "#fbbf24";

            const conn = myPeer.connect(targetId, {
                reliable: true
            });

            const timeout = setTimeout(() => {
                if (!conn.open) {
                    clientStatus.innerText = "Connection Timeout";
                    clientStatus.style.color = "#ef4444";
                    alert("Connection timed out. Check ID or Firewall.");
                    conn.close();
                }
            }, 10000);

            conn.on('open', () => {
                clearTimeout(timeout);
                clientStatus.innerText = "Signaling Established. Requesting Stream...";
                hostConnection = conn; // Store for Input Sending
                conn.send({ type: 'request-stream' });
            });

            conn.on('data', (data) => {
                if (data.type === 'wait') {
                    clientStatus.innerText = "Waiting for Host to start stream...";
                    clientStatus.style.color = "#3b82f6"; // Blue
                }
            });

            conn.on('close', () => {
                clearTimeout(timeout);
                console.log("Signaling closed");
                hostConnection = null;
            });

            conn.on('error', err => {
                clearTimeout(timeout);
                console.error("Connection Error:", err);
                clientStatus.innerText = "Connection Failed: " + err;
                clientStatus.style.color = "#ef4444";
            });
        }

        // --- Shared Call Handling ---
        function setupCallEvents(call, role) {
            activeCall = call;

            const checkPcInterval = setInterval(() => {
                if (call.peerConnection) {
                    clearInterval(checkPcInterval);
                    peerConnection = call.peerConnection;

                    if (role === 'host') {
                        applyHostOptimizations(peerConnection);
                    } else {
                        applyClientOptimizations(peerConnection);
                    }
                }
            }, 100);

            call.on('stream', (remoteStream) => {
                if (role === 'client') {
                    console.log("Stream received!");
                    videoContainer.style.display = 'block';
                    remoteVideo.srcObject = remoteStream;
                    clientStatus.innerText = "Receiving";
                    clientStatus.style.color = "#22c55e"; // Green

                    startStats();
                    requestWakeLock();
                }
            });

            call.on('close', () => {
                console.log("Call closed");
                if (role === 'client') {
                    stopClient();
                    alert("Connection disconnected");
                } else {
                    hostStatus.innerText = "Client Disconnected";
                    hostStatus.style.color = "";
                }
            });

            call.on('error', (err) => {
                console.error("Call Error:", err);
                alert("Communication Error: " + err);
            });
        }

        // --- OSD & Remote Control Logic ---

        // 1. OSD Toggle (Tap/Click to show/hide)
        videoContainer.addEventListener('click', (e) => {
            // Ignore clicks on buttons
            if (e.target.closest('button')) return;

            // Toggle visibility class
            if (videoContainer.classList.contains('touch-active')) {
                videoContainer.classList.remove('touch-active');
            } else {
                videoContainer.classList.add('touch-active');
                // Auto-hide after 3s
                clearTimeout(touchTimer);
                touchTimer = setTimeout(() => {
                    videoContainer.classList.remove('touch-active');
                }, 3000);
            }
        });

        // 2. Remote Control (Capture & Send)
        // Send input from Client to Host
        remoteVideo.addEventListener('pointerdown', handleInput);
        remoteVideo.addEventListener('pointermove', handleInput);
        remoteVideo.addEventListener('pointerup', handleInput);

        function handleInput(e) {
            // Only send input if we are the CLIENT and connected
            // Note: we check hostConnection (DataConnection) to send data
            if (!hostConnection || !hostConnection.open) return;

            // Rate limit pointermove (simple random filter for demo)
            if (e.type === 'pointermove' && Math.random() > 0.1) return;

            const rect = remoteVideo.getBoundingClientRect();

            // Normalize coordinates (0.0 to 1.0)
            // Ensure within bounds
            let x = (e.clientX - rect.left) / rect.width;
            let y = (e.clientY - rect.top) / rect.height;
            x = Math.max(0, Math.min(1, x));
            y = Math.max(0, Math.min(1, y));

            const inputData = {
                type: 'input',
                event: e.type,
                x: x.toFixed(4),
                y: y.toFixed(4),
                button: e.button
            };

            hostConnection.send(inputData);
        }


        // --- Optimization Logic (Existing) ---

        async function applyHostOptimizations(pc) {
            const bitrate = parseInt(document.getElementById('bitrate-input').value) || 10;
            await new Promise(r => setTimeout(r, 500));

            const senders = pc.getSenders();
            const videoSender = senders.find(s => s.track && s.track.kind === 'video');

            if (videoSender) {
                const params = videoSender.getParameters();
                if (!params.encodings) params.encodings = [{}];
                params.encodings[0].maxBitrate = bitrate * 1000000;
                params.encodings[0].networkPriority = 'high';
                params.degradationPreference = 'maintain-resolution';
                params.encodings[0].scaleResolutionDownBy = 1.0;

                try {
                    await videoSender.setParameters(params);
                    console.log("Host Parameters Set:", JSON.stringify(params.encodings[0]));
                    hostStatus.innerText += " (Optimized)";
                } catch (err) {
                    console.warn("Optimization Warning:", err);
                }
            }
        }

        function applyClientOptimizations(pc) {
            pc.ontrack = (e) => {
                if (e.receiver) {
                    if (e.receiver.playoutDelayHint !== undefined) {
                        e.receiver.playoutDelayHint = 0;
                    }
                    if (e.receiver.jitterBufferTarget !== undefined) {
                        e.receiver.jitterBufferTarget = 0;
                    }
                    console.log("Client Latency Hints Applied (0ms)");
                }
            };
        }

        // --- SDP Munging Helper ---
        function forceCodec(sdp, codec) {
            if (!codec || codec === 'VP8') return sdp; // Default

            const validCodecs = ['AV1', 'VP9', 'H264'];
            if (!validCodecs.includes(codec)) return sdp;

            const lines = sdp.split('\r\n');
            let mLineIndex = -1;

            for (let i = 0; i < lines.length; i++) {
                if (lines[i].startsWith('m=video')) {
                    mLineIndex = i;
                    break;
                }
            }

            if (mLineIndex === -1) return sdp;

            const payloadTypes = [];
            lines.forEach(line => {
                if (line.startsWith('a=rtpmap:')) {
                    const parts = line.split(' ');
                    if (parts.length < 2) return;
                    const match = parts[1].split('/');
                    if (match[0].toUpperCase() === codec.toUpperCase()) {
                        const pt = parts[0].split(':')[1];
                        payloadTypes.push(pt);
                    }
                }
            });

            if (payloadTypes.length === 0) return sdp;

            const mLineParts = lines[mLineIndex].split(' ');
            const otherPTs = mLineParts.slice(3).filter(pt => !payloadTypes.includes(pt));

            const newMLine = [
                mLineParts[0], mLineParts[1], mLineParts[2],
                ...payloadTypes, ...otherPTs
            ].join(' ');

            lines[mLineIndex] = newMLine;
            console.log(`SDP Codec Priority Rewritten: ${codec}`);
            return lines.join('\r\n');
        }

        // --- Stats & Utilities ---
        function startStats() {
            if (statsInterval) clearInterval(statsInterval);
            const display = document.getElementById('stats-display');

            statsInterval = setInterval(async () => {
                if (!peerConnection || peerConnection.connectionState !== 'connected') return;
                const stats = await peerConnection.getStats();
                let codec = '';
                let resolution = '';
                let fps = 0;

                stats.forEach(report => {
                    if (report.type === 'inbound-rtp' && report.kind === 'video') {
                        if (report.frameWidth) resolution = `${report.frameWidth}x${report.frameHeight}`;
                        if (report.framesPerSecond) fps = Math.round(report.framesPerSecond);
                        if (report.codecId) {
                            const codecInfo = stats.get(report.codecId);
                            if (codecInfo) codec = codecInfo.mimeType.split('/')[1];
                        }
                    }
                });

                if (resolution) {
                    display.innerText = `Codec: ${codec} | Res: ${resolution} | FPS: ${fps}`;
                }
            }, 1000);
        }

        function stopClient() {
            if (activeCall) activeCall.close();
            videoContainer.style.display = 'none';
            remoteVideo.srcObject = null;
            if (statsInterval) clearInterval(statsInterval);
            clientStatus.innerText = "Disconnected";
            if (wakeLock) wakeLock.release().then(() => wakeLock = null);
        }

        function copyId() {
            if (myIdInput.value) {
                navigator.clipboard.writeText(myIdInput.value);
                alert("ID Copied");
            }
        }

        function toggleFullscreen() {
            if (!document.fullscreenElement) {
                videoContainer.requestFullscreen();
            } else {
                document.exitFullscreen();
            }
        }

        async function requestWakeLock() {
            if ('wakeLock' in navigator) {
                try {
                    wakeLock = await navigator.wakeLock.request('screen');
                } catch (err) {
                    console.log(err);
                }
            }
        }
    </script>
</body>

</html>
